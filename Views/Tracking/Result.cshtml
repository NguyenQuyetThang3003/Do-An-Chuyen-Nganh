@model IEnumerable<WedNightFury.Models.Order>
@{
    ViewData["Title"] = "Kết quả tra cứu đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h4 class="text-primary mb-3 text-center">
        <i class="fas fa-clipboard-check"></i> Kết quả tra cứu
    </h4>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Người gửi</th>
                    <th>Người nhận</th>
                    <th>Giá trị (VNĐ)</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    string statusClass = order.Status switch
                    {
                        "pending" => "bg-info text-white",
                        "shipping" => "bg-warning text-dark",
                        "done" => "bg-success text-white",
                        "cancelled" => "bg-danger text-white",
                        _ => "bg-secondary text-white"
                    };

                    <tr>
                        <td>@order.Code</td>
                        <td>@order.SenderName</td>
                        <td>@order.ReceiverName</td>
                        <td>@order.Value.ToString("N0")</td>
                        <td><span class="badge @statusClass">@order.Status</span></td>
                        <td>@order.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Tra cứu khác
        </a>
    </div>
</div>
